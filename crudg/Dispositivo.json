{
	"model_name":"Dispositivo",	
	"pagination":50,
	"soft_deletes":"yes",
	"pk":"id",
	"localize":"yes",
	"table":"Dispositivos",
    "fields": [		
        {
            "name": "nombre",
            "type": "string"
        }
        ,
        {
            "name": "alcance",
            "type": "string"
        },
        {
            "name": "estado",
            "type": "string"
        }
        ,
        {
            "name": "Imagen",
            "type": "file"
        },
        {
            "name": "waypoint_id",
             "type": "integer#unsigned"
        }
        ],
     "foreign_keys": [
        {
            "column": "waypoint_id",
            "references": "id",
            "on": "Waypoints",
            "onDelete": "cascade"
        }
    ],
    "relationships": [
        {
            "name": "Waypoints",
            "type": "hasMany",
            "class": "App\\Waypoint"
        },
         {
            "name": "DispositivosAsignados",
            "type": "belongsTo",
            "class": "App\\DispositivosAsignado"
        }
    ],

    "validations": [
        {
            "field": "nombre",
            "rules": "required|max:10"
        },
        {
            "field": "alcance",
            "rules": "required|max:10"
        },
        {
            "field": "estado",
            "rules": "required|max:10"
        }
    ]
	
}