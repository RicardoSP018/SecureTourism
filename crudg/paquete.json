{
    "model_name":"Paquete",
    "pagination":20,
    "soft_deletes":"yes",
    "pk":"id",
    "localize":"yes",
    "table":"Paquetes",
    "fields": [
        {
            "name": "nombre",
            "type": "string"
        },
        {
            "name": "descripcion",
            "type": "string"
        },
        {
            "name": "contenido",
            "type": "string"
        },
        {
            "name": "duracion",
            "type": "string"
        },
        {
            "name": "imagen",
            "type": "file"
        },
        {
            "name": "paqueteAdquirido_id",
            "type": "integer#unsigned"
        },
        {
            "name": "destino_id",
            "type": "integer#unsigned"
        }
    ],

    "foreign_keys": [
        {
            "column": "paqueteAdquirido_id",
            "references": "id",
            "on": "PaquetesAdquiridos",
            "onDelete": "cascade"
        },
         {
            "column": "destino_id",
            "references": "id",
            "on": "Destinos",
            "onDelete": "cascade"
        }
        ],
    "relationships": [
        {
            "name": "Categorias",
            "type": "belongsTo",
            "class": "App\\Categoria"
        },        
        {
            "name": "PromocionesAsignadas",
            "type": "belongsTo",
            "class": "App\\Promocion"
        },
        {
            "name": "Destinos",
            "type": "hasOne",
            "class": "App\\Destino"
        }
    ],
    "validations": [
        {
            "field": "nombre",
            "rules": "required|min:3|max:20"
        }

    ]
	
}